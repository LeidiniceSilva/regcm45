 &dimparam
 iy     = 44,
 jx     = 38,
 kz     = 18,
 nsg    = 1,
 /
 
 &coreparam
 idynamic = 2,  ! Choice of dynamical core
                ! 1 = MM4 hydrostatical core
                ! 2 = MM5 NON hydrostatical core
 /
 
 ! Nao altere esses valores
 ! Dynamical core parameters

 &dynparam
 gnu1 = 0.1,
 gnu2 = 0.1,
 ckh = 1.0,
 adyndif = 1.0,
 diffu_hgtf = 0,
 upstream_mode = .true.,
 uoffc = 0.250,
 stability_enhance = .true.,
 vert_stability_enhance = .true.,
 t_extrema = 5.0,
 q_rel_extrema = 0.2,
 c_rel_extrema = 0.5,
 t_rel_extrema = 0.5,
 /


 !localizacao geografica da simulacao
 
 &geoparam
 iproj = 'NORMER',
 ds = 50.0,
 ptop = 5.0,
 clat = -10.00,
 clon = -42.00,
 plat = -10.00,
 plon = -42.00,
 truelatl = 30.0,
 truelath = 60.0,
 i_band = 0,
 /

 ! informacoes do terreno e indicacao das condicoes de contorno "inpter" global
 ! bem  arquivo as condicoes de contorno de sua simulacao "dirter"

 
 &terrainparam
 domname = 'neb',
 lakedpth = .false.,
 fudge_lnd   = .false.,
 fudge_lnd_s = .false.,
 fudge_tex   = .false.,
 fudge_tex_s = .false.,
 dirter ='/vol3/disco1/nice/data_file/regcm_data/exp_est2/clm/input',     
 inpter ='/vol3/disco1/DADOS_CONTORNO_REGCM46',       
 /
 
 &debugparam
 debug_level = 1,
 dbgfrq = 3,
 /
 
 &boundaryparam
 nspgx  = 12,
 nspgd  = 12,
 /
 
 regcm.in
 ! Informacoes sobre SST, dados atmosfericos globais e o periodo das simulacoes
 
 &globdatparam
 ibdyfrq = 6,
 ssttyp = 'EIN15',
 dattyp = 'EIN15',
 gdate1 = 2017010100,
 gdate2 = 2017010700,
 dirglob = '/vol3/disco1/nice/data_file/regcm_data/exp_est2/clm/input',
 inpglob = '/vol3/disco1/DADOS_CONTORNO_REGCM46',
 /
 
 &globwindow
 lat0 = 0.0
 lat1 = 0.0
 lon0 = 0.0
 lon1 = 0.0
 /
 
 &restartparam
 ifrest  = .false. ,
 mdate0  = 2017010100,
 mdate1  = 2017010100,
 mdate2  = 2017010700,
 /
 
 
 ! parametros de integracao do modelo
 ! o dt e o passo de tempo que o nucleo dinamico do modelo "roda"
 ! o dtrad, o codigo de radiacao, dtsrf o modelo de superficie, 
 ! eles devem ser multiplos. Alem disso, uma das formas de se corrigir
 ! eventuais problemas de CFL e aqui.
 
 &timeparam
 dtrad   =    30.,
 dtabem  =    18.,
 dtsrf   =   300.,
 dt      =    60.,
  /
 
 ! controle das saidas das simulacoes, 
 ! por exemplo: ifatm = .true. (vamos salvar dados atmosfericos), atmfrq = 6 (a cada 6 horas)
 ! e ao final vamos colocar na pasta indicada por "dirout"
 
 
 &outparam
 ifsave  = .true. ,
   savfrq  =    6.,
 ifatm  = .true. ,
   atmfrq  =     6.,
 ifrad   = .false. ,
   radfrq  =     6.,
 ifsrf   = .true. ,
 ifsub   = .false. ,
   srffrq  =     6.,
 ifchem  = .false.,
   chemfrq =     6.,
 dirout = '/vol3/disco1/nice/data_file/regcm_data/exp_est2/clm/output',
 /
 
 !
 ! aqui sao as opcoes da fisica do modelo quando voce quiser outras opcoes 
 ! deve ir ao arquivo original "README.namelist" e ver as opcoes para 
 ! esses parametros. Para isso va a parte "Model Physics" e veja as opcoes para as suas simulacoes
 !
 
 &physicsparam
 iboudy  =          5,
 ibltyp  =          1,
 icup_lnd =         5,
 icup_ocn =         4,
 ipptls  =          1,
 iocnflx =          1,
 ipgf    =          0,
 iemiss  =          0,
 lakemod =          0,
 ichem   =          0,
 scenario = 'A1B',
 idcsst = 0,
 iseaice = 0,
 idesseas = 0,
